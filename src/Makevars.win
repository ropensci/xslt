VERSION=2.9.8
RWINLIB=../windows/libxml2-$(VERSION)
PKG_CPPFLAGS=-I$(RWINLIB)/include -I$(RWINLIB)/include/libxml2 \
	-DLIBXML_STATIC -DSTRICT_R_HEADERS

PKG_LIBS=-L$(RWINLIB)/lib${R_ARCH} -lexslt -lxslt -lxml2 -llzma -liconv -lz -lws2_32

all: clean winlibs

clean:
	rm -f $(OBJECTS) $(SHLIB)

winlibs:
	"${R_HOME}/bin${R_ARCH_BIN}/Rscript.exe" --vanilla "../tools/winlibs.R" $(VERSION)

.PHONY: all winlibs clean
